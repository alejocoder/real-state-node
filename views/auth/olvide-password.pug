extends ../layout/index

block contenido
    div.py-10
        h1.text-4xl.my-10.font-extrabold.text-center Bienes
            span.font-normal Raices
        h2.text-center.text-5xl.font-extrabold= pagina

        .mt-8.mx-auto.max-w-md
            .bg-white.py-8.px-4.shadow
                form
                    
                    div
                        label.block.text-sm.uppercase.text-gray-500.my-3.font-bold(for="email") Tu Email
                        input#email.w-full.px-3.py-3.border.border-gray-300.rounded-md.placeholder-gray-300(placeholder = "Tu Email" type="email" name="email")
                        
                    div.flex.item-center.justify-between.my-3
                        a.text-gray-500.text-xs(href="/auth/registro") ¿No Tienes Cuenta? Crea Una
                        a.text-gray-500.text-xs(href="/auth/login") ¿Tienes Cuenta? Inicia Sesión
                        
                    input(class = "w-full my-3 bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3 cursor-pointer" type="submit" value="Enviar Instrucciones")